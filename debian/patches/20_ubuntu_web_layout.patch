--- cobbler.orig/config/cobbler.conf	2010-12-09 16:49:39.561694002 -0800
+++ cobbler/config/cobbler.conf	2010-12-09 16:52:49.111694002 -0800
@@ -1,13 +1,13 @@
 # This configuration file allows cobbler data
 # to be accessed over HTTP.
 
-AliasMatch ^/cblr(?!/svc/)(.*)?$ "/var/www/cobbler$1"
-AliasMatch ^/cobbler_track(.*)?$ "/var/www/cobbler$1"
-AliasMatch ^/cobbler(.*)?$ "/var/www/cobbler$1"
+AliasMatch ^/cblr(?!/svc/)(.*)?$ "/usr/share/cobbler/webroot/cobbler$1"
+AliasMatch ^/cobbler_track(.*)?$ "/usr/share/cobbler/webroot/cobbler$1"
+AliasMatch ^/cobbler(.*)?$ "/usr/share/cobbler/webroot/cobbler$1"
 
-WSGIScriptAliasMatch ^/cblr/svc/([^/]*) /var/www/cobbler/svc/services.py
+WSGIScriptAliasMatch ^/cblr/svc/([^/]*) /usr/share/cobbler/webroot/cobbler/svc/services.py
 
-<Directory "/var/www/cobbler">
+<Directory "/usr/share/cobbler/webroot/cobbler">
     Options Indexes FollowSymLinks
     Order allow,deny
     Allow from all
@@ -24,7 +24,7 @@
 # and is visited at http://.../cobbler_web not this URL.
 # this is only a pointer to the new page.
 
-<Directory "/var/www/cobbler/web/">
+<Directory "/usr/share/cobbler/webroot/cobbler/web/">
     Options Indexes FollowSymLinks
     Order allow,deny
     Allow from all
